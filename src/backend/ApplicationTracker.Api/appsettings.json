{
  "App": {
    "FrontendBaseUrl": "http://localhost:5173"
  },
  "AllowedOrigins": ["http://localhost:5173", "https://localhost:5173"],
  "Jwt": {
    "Issuer": "ApplicationTracker",
    "Audience": "ApplicationTracker",
    "ExpiryInMinutes": 15
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=ApplicationTracker;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Resend": {
    "FromAddress": "noreply@yourdomain.com"
  }
}
