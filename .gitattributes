###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

###############################################################################
# .NET specific files
###############################################################################
*.cs     text diff=csharp
*.csx    text diff=csharp
*.vb     text
*.vbx    text
*.cshtml text
*.razor  text

###############################################################################
# XML project files
###############################################################################
*.csproj   text merge=union
*.vbproj   text merge=union
*.fsproj   text merge=union
*.dbproj   text merge=union
*.sln      text merge=union eol=crlf

###############################################################################
# Config files
###############################################################################
*.config       text
*.props        text
*.targets      text
*.ruleset      text
*.json         text
*.xml          text
*.xaml         text

###############################################################################
# Documentation and markdown
###############################################################################
*.md           text
*.txt          text
LICENSE        text
README         text

###############################################################################
# Scripts
###############################################################################
*.sh           text eol=lf
*.ps1          text eol=crlf
*.cmd          text eol=crlf
*.bat          text eol=crlf

###############################################################################
# Binary files
###############################################################################
*.png          binary
*.jpg          binary
*.jpeg         binary
*.gif          binary
*.ico          binary
*.svg          binary
*.ttf          binary
*.otf          binary
*.woff         binary
*.woff2        binary
*.eot          binary
*.pdf          binary
*.dll          binary
*.exe          binary
*.zip          binary
*.7z           binary

